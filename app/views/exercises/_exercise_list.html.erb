<div class="col-7">
  <h3 class="text-warning" style="text-align:center">Exercises</h3>
  <table class="table text-warning table-hover table-bordered">
    <thead class="table-dark text-warning">
      <tr>
        <th style="text-align:start">Name</th>
        <% if current_user.user? %>
          <th style="text-align:end">Favourite/Unfavourite</th>
        <% else %>
        <th style="text-align:end">No. Of Users</th>
        <% end %> 
      </tr>
    </thead>
    <tbody>
      <% exercises.each do |exercise| %>
        <tr>
          <td><%= link_to exercise.name, exercise_path(exercise), class: "text-warning lead prop" %></td>
          <% if current_user.user? %>
            <% exercise.favourite?(current_user.id) ? var= "Unfavourite" : var= "Favourite" %>
            <td style="text-align:end"><%= button_to var, change_favourite_exercise_path(exercise, type: var), method: :patch, class: "btn btn-dark text-warning", remote: true%></td>
          <% else %>
          <td class="text-warning lead" style="text-align:end"><%= exercise.users.count %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>